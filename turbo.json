{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "test"],
      "outputs": [".next/**", "!.next/cache/**", "storybook-static/**"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "analyze": {
      "dependsOn": ["^analyze"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "POSTGRES_DATABASE_URL",
    "AUTH_POSTMARK_KEY",
    "FLAGS_SECRET",
    "BETTER_AUTH_SECRET",
    "BASE_URL",
    "ANTHROPIC_API_KEY",
    "FIREWORKS_API_KEY",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_PLUS_PRICE_ID",
    "STRIPE_PLUS_PRICE_ID_ANNUAL",
    "GOOGLE_GENERATIVE_AI_API_KEY",
    "NEXT_PUBLIC_POSTHOG_KEY",
    "NEXT_PUBLIC_POSTHOG_HOST",
    "VOYAGE_API_KEY",
    "LANGFUSE_SECRET_KEY",
    "LANGFUSE_PUBLIC_KEY",
    "LANGFUSE_BASEURL"
  ]
}
